<% if current_user.favorite?(user) %>
  <%= form_with(model: current_user.favorites.find_by(micropost_id: user.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, current_user.id %>
    <%= f.submit 'Unfavotite', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, current_user.id %>
    <%= f.submit 'favorite', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>

